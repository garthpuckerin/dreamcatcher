{
  "manifest_version": 3,
  "name": "PipelineOS Capture",
  "version": "2.0.0",
  "description": "Capture AI conversations for PipelineOS implementation",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "background",
    "notifications",
    "contextMenus",
    "alarms"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://*.pipelineos.dev/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://claude.ai/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["https://chat.openai.com/*", "https://claude.ai/*"]
    }
  ]
}
